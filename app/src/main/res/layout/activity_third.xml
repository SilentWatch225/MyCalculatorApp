<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <EditText
        android:id="@+id/baseET"
        android:layout_width="138dp"
        android:layout_height="73dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="164dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Base"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ExponentET"
        android:layout_width="91dp"
        android:layout_height="59dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="104dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Exponent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/calculateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="356dp"
        android:backgroundTint="@color/barn_red"
        android:text="Calculate"
        android:onClick="calc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toRationalTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="448dp"
        android:backgroundTint="@color/dark_blue"
        android:onClick="changeScreen"
        android:text="Calc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numDisTV"
        android:layout_width="203dp"
        android:layout_height="81dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="260dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="Answer Displayed Here"
        android:onClick="changeScreen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>